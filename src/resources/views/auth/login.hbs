<div class="formLogin">
    <h2>Đăng nhập</h2>
    <form method="post" action="/home"> 
        <div class="form-group">
            <label for="exampleInputEmail1"><i class="ti-user"></i> Tên người dùng:</label>
            <input type="text" class="form-control" name="user" placeholder="Enter user...">
            <span>{{errUser}}</span>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1"><i class="ti-lock"></i> Mật khẩu</label>
            <input type="password" class="form-control" name="password" placeholder="Enter password...">
            <span>{{errPassword}}</span>
        </div>
        <span class="errBtn">{{errLogin}}</span>
        <button type="submit" class="btn btn-primary"> Login </button>
        <div class="btnLogin"><a href="register">Tạo tài khoản</a></div>
    </form>
</div>