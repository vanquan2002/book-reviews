{{> navAdmin}}
<div class="edit mt-4">
    <h3 class="mt40">Cập nhật sách</h3>
    <form method="post" action="/books/{{book._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên sách</label> <br>
            <input type="text" class="form-control" value="{{book.name}}" placeholder="" name="name">
        </div>
        <div class="form-group">
            <label for="author">Tác giả:</label> 
            <input type="text" class="form-control" value="{{book.author}}" placeholder="" name="author">
        </div>
        <div class="form-group">
            <label for="company">Nhà xuất bản:</label>  <br>
            <input type="text" class="form-control"  value="{{book.company}}" placeholder="" name="company"> 
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label> <br>
            <textarea name="description" class="form-control" cols="30" rows="5">{{book.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="">Chọn ảnh</label> <br>
            <input type="file" class="form-control" name="image"> 
        </div>
        
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>